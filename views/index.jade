extends layout

block content
  h1= title
  p Welcome to #{title}
  p Room name: #{room.name}
  h2 SEND this link to your teammates to connect
  code #{address}/room/?roomId=#{room._id}
  div#averageScore
  div#joinedUsers

  div
    label My Name is:
    br
    input#nameOfUser(type="text")
    br
    input#nameSubmitButton(type="submit",value="submit")
  div#sps
  div#calculateTheScore
  script.
    let room = "#{room}"
    let roomName = "#{room.name}"
    let roomId = "#{room._id}"
    let address = "#{address}"
  script(src='#{socketVersion}')
  script(src='#{address}/javascripts/room.js')

